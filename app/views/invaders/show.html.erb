<div class="showInvaderSpecs">

<div class="invaderImageFrame overFlowHidden"> <%= image_tag @invader.image.url(:large), :class => "invaderImage" %> </div>

<div class="invaderText">


    <h1>
  <%= @invader.name %>
</h1>
<br>
<hr>
<br>

  <h2>Description:</h2>
  <p>
  <%= @invader.description %>
  </p>
  <br>



  <h2>Hints:</h2>
  <p>
  <%= @invader.hints %>
  </p>
  <br>



  <h2>Explorer:</h2>
  <p>
  <%= @invader.username %>
  </p>
  <br>

  <h2>Credibility:</h2>
  <p>
  <%= @invader.credibility %>
  </p>


<div class="txtAlignCenter">

<br><br>

<% if @invader.users_id == current_user.id  %>
 <%= link_to 'Edit', edit_invader_path(@invader), :class => "formBtn" %><%= link_to 'Destroy', @invader, method: :delete, data: { confirm: 'Are you sure?' },:class => "formBtn delete" %>
<% else %>
 <%= link_to 'Found Invader', edit_invader_path(@invader), :class => "formBtn submit" %><%= link_to 'Unable to find', @invader, method: :delete, data: { confirm: 'Are you sure?' },:class => "formBtn delete" %>
<% end %>


<br><br><br><br><br>
</div>
</div>

</div>
